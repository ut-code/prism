{
  "name": "utcode-chat-app",
  "type": "module",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "dev": "bun run --filter='@apps/{client,convex}' dev",
    "dev:all": "(trap 'kill 0' EXIT; bun run dev:convex & bun run dev:web & bun run dev:storybook & wait",
    "dev:web": "bun run --filter=@apps/client dev",
    "dev:convex": "cd apps/convex && bun run dev",
    "dev:tauri": "cd apps/client && bun run dev:tauri",
    "dev:storybook": "cd apps/client && bun run storybook",
    "prepare": "bun run --filter=* prepare",
    "check": "bun run check:format",
    "fix": "bun run fix:format",
    "check:format": "prettier --check .",
    "fix:format": "prettier --write .",
    "convex": "cd apps/convex && bun run convex",
    "paraglide": "cd apps/client && bun run paraglide"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.13"
  }
}
