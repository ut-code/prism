{
  "name": "@apps/client",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun vite dev",
    "dev:tauri": "bun run tauri dev",
    "build": "bun vite build",
    "build:tauri": "bun run tauri build",
    "sync": "svelte-kit sync && bun run paraglide",
    "check": "bun sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bun sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:e2e": "playwright test",
    "test": "bun run test:e2e",
    "paraglide": "bunx @inlang/paraglide-js compile --outdir ./src/lib/paraglide",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-a11y": "^9.0.16",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-svelte-csf": "^5.0.6",
    "@storybook/addon-vitest": "^9.0.16",
    "@storybook/sveltekit": "^9.0.16",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/kit": "^2.22.5",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/cli": "^2.6.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "daisyui": "^5.0.46",
    "svelte": "^5.35.5",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "@apps/convex": "workspace:convex",
    "@inlang/paraglide-js": "^2.2.0",
    "@playwright/test": "^1.54.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@tauri-apps/api": "^2.6.0",
    "@tauri-apps/plugin-opener": "^2.4.0",
    "convex": "^1.25.2",
    "convex-svelte": "^0.0.11",
    "runed": "^0.30.0"
  }
}
