		"@storybook/addon-vitest": "^9.0.14",
		"@storybook/sveltekit": "^9.0.15",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/vite": "^4.1.11",
		"@tauri-apps/cli": "^2.6.2",
		"@vitest/browser": "^3.2.4",
