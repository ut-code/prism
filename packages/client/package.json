{
	"name": "@packages/client",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:tauri": "bun run tauri dev",
		"build": "vite build",
		"build:tauri": "bun run tauri build",
		"preview": "vite preview",
		"prepare": "bun sync",
		"sync": "svelte-kit sync && bun run paraglide",
		"check": "bun sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:e2e": "playwright test",
		"test": "bun run test:e2e",
		"paraglide": "bunx @inlang/paraglide-js compile --outdir ./src/lib/paraglide",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.0.1",
